<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>Post Delay Application</display-name>
  <description>
	Post delay servlets
    </description>
     
    <servlet>
        <servlet-name>PostDelayServlet</servlet-name>
        <servlet-class>web.servlets.PostDelayServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostDelayServlet</servlet-name>
        <url-pattern>/postdelay</url-pattern>
    </servlet-mapping>
  
</web-app>